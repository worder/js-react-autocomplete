{
  "name": "js-react-autocomplete",
  "version": "0.1.0",
  "private": true,
  "main": "dist/Autocomplete.js",
  "dependencies": {
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "co": "4.x",
    "lodash": "4.x",
    "prop-types": "15.x",
    "react-themeable": "^1.1.0",
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "concurrently": "^4.1.0"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "babel-plugin-transform-class-properties"
    ],
    "env": {
      "production": {
        "plugins": [
          "babel-plugin-transform-react-remove-prop-types"
        ]
      }
    }
  },
  "scripts": {
    "install": "npm run build",
    "install-peers": "install-peerdeps -S eslint-config-airbnb && install-peerdeps -S eslint-config-prettier && install-peerdeps -S eslint-config-react-app",
    "build-main": "rm -rf dist && mkdir dist && BABEL_ENV=\"production\" babel src -d dist --copy-files --verbose",
    "build-demo": "cd demo && rm -rf dist && BABEL_ENV=\"production\" babel src -d dist --verbose",
    "watch-main": "babel src -d dist -w --copy-files",
    "watch-demo": "cd demo && babel src -d dist -w",
    "build": "concurrently \"npm run build-main\" \"npm run build-demo\"",
    "watch": "concurrently \"npm run watch-main\" \"npm run watch-demo\""
  },
  "devDependencies": {
    "axios": "^0.18.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-react-app": "^4.0.1",
    "eslint-plugin-prettier": "^3.1.0",
    "install-peerdeps": "^1.10.2",
    "prettier": "^1.17.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "peerDependencies": {
    "react": "16.x",
    "react-dom": "16.x"
  }
}
